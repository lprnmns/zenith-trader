# =====================================================================
# ZENITH TRADER - PRODUCTION ENVIRONMENT TEMPLATE
# =====================================================================
# Use this as a reference for production deployment
# NEVER use actual values in this file

# =====================================================================
# SERVER CONFIGURATION
# =====================================================================

# Server Configuration
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# Database Configuration (Production PostgreSQL)
DATABASE_URL=postgresql://zenith_user:${DB_PASSWORD}@postgres:5432/zenith_trader_db

# Redis Configuration (Production Redis)
REDIS_URL=redis://redis:6379

# =====================================================================
# SECURITY & AUTHENTICATION
# =====================================================================

# JWT Configuration (Minimum 32 characters - MUST be changed in production)
JWT_SECRET=${JWT_SECRET}

# Session Secret (Minimum 32 characters - MUST be changed in production)
SESSION_SECRET=${SESSION_SECRET}

# Encryption Key (Minimum 32 characters - MUST be changed in production)
ENCRYPTION_KEY=${ENCRYPTION_KEY}

# Bcrypt Rounds (Higher is more secure but slower)
BCRYPT_ROUNDS=12

# =====================================================================
# GOOGLE OAUTH CONFIGURATION
# =====================================================================

# Google OAuth Credentials (Production Google Cloud Console)
GOOGLE_CLIENT_ID=${GOOGLE_CLIENT_ID}
GOOGLE_CLIENT_SECRET=${GOOGLE_CLIENT_SECRET}

# OAuth Redirect URIs (Production URLs)
GOOGLE_REDIRECT_URI=https://api.zenithtrader.com/api/auth/google/callback
GOOGLE_SUCCESS_REDIRECT=https://zenithtrader.com/dashboard
GOOGLE_FAILURE_REDIRECT=https://zenithtrader.com/login

# Admin User Configuration (for seeding)
ADMIN_EMAIL=${ADMIN_EMAIL}
ADMIN_PASSWORD=${ADMIN_PASSWORD}

# =====================================================================
# API SERVICES
# =====================================================================

# Zerion API (Production Key)
ZERION_API_KEY=${ZERION_API_KEY}

# Etherscan API (Production Key)
ETHERSCAN_API_KEY=${ETHERSCAN_API_KEY}

# OKX Trading API (Production Keys)
OKX_API_KEY=${OKX_API_KEY}
OKX_API_SECRET=${OKX_API_SECRET}
OKX_API_PASSPHRASE=${OKX_API_PASSPHRASE}

# OKX Configuration (Production)
OKX_DEMO_MODE=0
OKX_SANDBOX=false
OKX_SIMULATED_TRADING=false

# =====================================================================
# COPY TRADING CONFIGURATION
# =====================================================================

# Default Trading Parameters (Production Values)
DEFAULT_LEVERAGE_LONG=3
DEFAULT_LEVERAGE_SHORT=1
DEFAULT_EQUITY_ALLOCATION=10.00
DEFAULT_MIN_NOTIONAL=50.00
DEFAULT_MAX_NOTIONAL=50000.00
DEFAULT_MAX_POSITIONS=10

# Risk Management (Production Values)
DAILY_LOSS_LIMIT_PERCENT=20.00
MAX_DRAWDOWN_PERCENT=30.00
SLIPPAGE_TOLERANCE_BPS=50

# =====================================================================
# NOTIFICATIONS & PWA
# =====================================================================

# Push Notifications (Production VAPID Keys)
VAPID_PUBLIC_KEY=${VAPID_PUBLIC_KEY}
VAPID_PRIVATE_KEY=${VAPID_PRIVATE_KEY}
VAPID_CONTACT_EMAIL=${VAPID_CONTACT_EMAIL}

# Notification Settings
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_PUSH_NOTIFICATIONS=true
NOTIFICATION_POLL_INTERVAL=60000

# =====================================================================
# MONITORING & LOGGING
# =====================================================================

# Application Logging
LOG_LEVEL=warn
ENABLE_REQUEST_LOGGING=true
ENABLE_ERROR_STACK_TRACES=false

# Performance Monitoring
ENABLE_PERFORMANCE_METRICS=true
METRICS_PORT=9090

# =====================================================================
# CORS & SECURITY HEADERS
# =====================================================================

# CORS Configuration (Production Domains)
CORS_ORIGIN=https://zenithtrader.com
CORS_CREDENTIALS=true

# Security Headers
HELMET_CSP_ENABLED=true
HELMET_HSTS_ENABLED=true
HELMET_XSS_PROTECTION=true

# =====================================================================
# DEVELOPMENT & DEBUGGING
# =====================================================================

# Debug Mode (Always false in production)
DEBUG=
ENABLE_DEV_FEATURES=false
ENABLE_TEST_ENDPOINTS=false

# Rate Limiting (Production Settings)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=60

# =====================================================================
# DATABASE & CACHE
# =====================================================================

# Prisma Configuration
PRISMA_LOG_QUERIES=false
PRISMA_LOG_LEVEL=warn

# Redis Cache Configuration
REDIS_TTL_SECONDS=300
REDIS_CONNECTION_TIMEOUT=5000

# =====================================================================
# FRONTEND CONFIGURATION
# =====================================================================

# Frontend Base URL (for OAuth redirects)
FRONTEND_URL=https://zenithtrader.com

# API Base URL (for frontend)
API_BASE_URL=https://api.zenithtrader.com

# =====================================================================
# TESTING & CI/CD
# =====================================================================

# Test Configuration (Not used in production)
TEST_DATABASE_URL=
TEST_REDIS_URL=

# =====================================================================
# NOTES
# =====================================================================
# 1. All ${VAR} values should be provided via environment variables
# 2. Use secrets management system (AWS Secrets Manager, etc.)
# 3. Rotate secrets regularly in production
# 4. Monitor for security vulnerabilities
# 5. Use HTTPS and valid SSL certificates
# 6. Set up proper monitoring and alerting
# 7. Configure backup and disaster recovery