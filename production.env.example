# Zenith Trader Production Environment
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/zenith_trader_prod"

# Redis Configuration
REDIS_URL="redis://localhost:6379"

# Server Configuration
PORT=3000
NODE_ENV=production

# JWT Configuration
JWT_SECRET="your-super-secure-jwt-secret-key-here"
JWT_EXPIRES_IN="7d"

# API Keys
ETHERSCAN_API_KEY="your-etherscan-api-key"
ZERION_API_KEY="your-zerion-api-key"

# VAPID Keys for Push Notifications
VAPID_PUBLIC_KEY="your-vapid-public-key"
VAPID_PRIVATE_KEY="your-vapid-private-key"

# Encryption Keys
ENCRYPTION_KEY="your-32-character-encryption-key"
ENCRYPTION_IV="your-16-character-iv"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL="info"
LOG_FILE_PATH="./logs/zenith-trader.log"

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Health Check
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *" # Daily at 2 AM
BACKUP_RETENTION_DAYS=7

# Security
CORS_ORIGIN="https://your-domain.com"
HELMET_ENABLED=true
RATE_LIMIT_ENABLED=true

# Performance
MAX_CONCURRENT_REQUESTS=50
REQUEST_TIMEOUT=30000
