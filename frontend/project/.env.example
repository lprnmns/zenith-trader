# =====================================================================
# ZENITH TRADER - FRONTEND ENVIRONMENT TEMPLATE
# =====================================================================
# Copy this file to frontend/project/.env and fill in your actual values
# NEVER commit .env file to version control

# =====================================================================
# API CONFIGURATION
# =====================================================================

# Backend API Base URL
VITE_API_BASE_URL=http://localhost:3001

# API Timeout (milliseconds)
VITE_API_TIMEOUT=30000

# =====================================================================
# AUTHENTICATION
# =====================================================================

# JWT Token Configuration
VITE_TOKEN_STORAGE_KEY=zenith_auth_token
VITE_USER_STORAGE_KEY=zenith_user_data

# OAuth Configuration
VITE_GOOGLE_CLIENT_ID=your-google-oauth-client-id
VITE_GOOGLE_REDIRECT_URI=http://localhost:5173/auth/google/callback

# =====================================================================
# PWA CONFIGURATION
# =====================================================================

# Push Notifications (VAPID Public Key)
VITE_PUSH_PUBLIC_KEY=your-vapid-public-key

# Service Worker Configuration
VITE_SW_ENABLED=true
VITE_OFFLINE_MODE=true

# =====================================================================
# APPLICATION SETTINGS
# =====================================================================

# App Configuration
VITE_APP_NAME="Zenith Trader"
VITE_APP_VERSION="1.0.0"
VITE_APP_ENVIRONMENT=development

# Feature Flags
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_REALTIME_UPDATES=true
VITE_ENABLE_ANALYTICS=false

# UI Configuration
VITE_DEFAULT_THEME=system
VITE_DEFAULT_LANGUAGE=en
VITE_DEFAULT_CURRENCY=USD

# =====================================================================
# DEBUGGING & DEVELOPMENT
# =====================================================================

# Debug Mode
VITE_DEBUG=false
VITE_VERBOSE_LOGGING=false

# Mock Data (for development)
VITE_USE_MOCK_DATA=false
VITE_MOCK_API_DELAY=500

# =====================================================================
# SECURITY
# =====================================================================

# CORS Configuration
VITE_CORS_ORIGIN=http://localhost:3001

# Security Headers
VITE_ENABLE_CSP=true
VITE_ENABLE_HSTS=false

# =====================================================================
# PERFORMANCE
# =====================================================================

# Cache Configuration
VITE_ENABLE_CACHE=true
VITE_CACHE_TTL=300000

# Lazy Loading
VITE_ENABLE_LAZY_LOADING=true
VITE_ENABLE_CODE_SPLITTING=true

# =====================================================================
# EXTERNAL SERVICES
# =====================================================================

# Analytics (Optional)
VITE_GA_TRACKING_ID=
VITE_HOTJAR_ID=
VITE_SENTRY_DSN=

# Error Reporting
VITE_ENABLE_ERROR_REPORTING=false
VITE_ERROR_REPORTING_SAMPLE_RATE=1.0

# =====================================================================
# TESTING
# =====================================================================

# Test Configuration
VITE_TEST_MODE=false
VITE_CYPRESS_MODE=false

# Mock Services
VITE_MOCK_AUTH_SERVICE=false
VITE_MOCK_WALLET_SERVICE=false
VITE_MOCK_TRADING_SERVICE=false

# =====================================================================
# NOTES
# =====================================================================
# 1. All VITE_ prefixed variables will be available in the frontend
# 2. Never commit this file with real values to version control
# 3. Use environment-specific values for staging/production
# 4. Some values are optional and can be left empty if not needed
# 5. URLs should not include trailing slashes